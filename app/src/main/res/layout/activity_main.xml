<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/prod_btt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PROD" />

                <Button
                    android:id="@+id/dev_btt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DEV" />
            </LinearLayout>

            <TextView
                android:id="@+id/api_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="URL" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/username_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Username"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/password_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Password"
                        android:inputType="textPassword" />

                </LinearLayout>

                <EditText
                    android:id="@+id/inst_code_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="klikxxxxxxxxx"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/access_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="access_token" />

                <TextView
                    android:id="@+id/refresh_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="refresh_token" />

                <Button
                    android:id="@+id/login_btt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/evals_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/evals_btt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EVALUATIONS" />

                <LinearLayout
                    android:id="@+id/holder_ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"></LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>