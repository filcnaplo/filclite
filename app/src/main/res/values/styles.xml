<resources>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/darkColorAccent</item>
        <item name="colorAccent2">@color/darkColorAccent2</item>
        <item name="colorBackground">@color/darkColorBackground</item>
        <item name="colorButtonUnselected">@color/darkColorBackground</item>
        <item name="colorButtonSelected">@color/darkColorAccent</item>
        <item name="colorUnavailable">@color/darkColorUnavailable</item>
        <item name="colorText">@color/darkColorText</item>
        <item name="selectedButtonStyle">@style/darkSelectedButtonStyle</item>
        <item name="spinnerItemLayout">@layout/dark_sorter_spinner_item</item>
        <item name="spinnerDropdownItemLayout">@layout/dark_sorter_spinner_item</item>
        <item name="android:textColor">@color/darkColorText</item>
        <item name="android:buttonStyle">@style/darkButtonStyle</item>
        <item name="android:background">@color/darkColorBackground</item>
    </style>

    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/lightColorPrimary</item>
        <item name="colorPrimaryDark">@color/lightColorPrimaryDark</item>
        <item name="colorAccent">@color/lightColorAccent</item>
        <item name="colorAccent2">@color/lightColorAccent2</item>
        <item name="colorBackground">@color/lightColorBackground</item>
        <item name="colorButtonUnselected">@color/lightColorBackground</item>
        <item name="colorButtonSelected">@color/lightColorAccent</item>
        <item name="colorUnavailable">@color/lightColorUnavailable</item>
        <item name="colorText">@color/lightColorText</item>
        <item name="selectedButtonStyle">@style/lightSelectedButtonStyle</item>
        <item name="spinnerItemLayout">@layout/light_sorter_spinner_item</item>
        <item name="spinnerDropdownItemLayout">@layout/light_sorter_spinner_item</item>
        <item name="android:textColor">@color/lightColorText</item>
        <item name="android:buttonStyle">@style/lightButtonStyle</item>
        <item name="android:background">@color/lightColorBackground</item>
    </style>

    <style name="buttonStyle" parent="@style/Widget.AppCompat.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    <style name="lightButtonStyle" parent="@style/buttonStyle">
        <item name="android:textColor">@color/lightColorText</item>
        <item name="android:background">@color/lightColorBackground</item>
    </style>
    <style name="darkButtonStyle" parent="@style/buttonStyle">
        <item name="android:textColor">@color/darkColorText</item>
        <item name="android:background">@color/darkColorBackground</item>
    </style>

    <style name="lightSelectedButtonStyle" parent="@style/buttonStyle">
        <item name="android:textColor">@color/lightColorText</item>
        <item name="android:background">@color/lightColorAccent</item>
    </style>
    <style name="darkSelectedButtonStyle" parent="@style/buttonStyle">
        <item name="android:textColor">@color/darkColorText</item>
        <item name="android:background">@color/darkColorAccent</item>
    </style>

</resources>

